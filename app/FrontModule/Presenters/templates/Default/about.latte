{block script}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-mousewheel/3.1.13/jquery.mousewheel.min.js"></script>
    <script src="{$basePath}/assets/js/raphael.js"></script>
    <script src="{$basePath}/assets/js/jquery.mapael.js"></script>
    <script src="{$basePath}/assets/js/mapCZ.js"></script>
    <script>

        $(function () {
            $(".mapcontainer").mapael({
                map: {
                    name: "czech_republic",
                    defaultPlot: {
                        size: 30,
                        eventHandlers: {
                            mouseover: function (e, id, mapElem, textElem, elemOptions) {
                                if (typeof elemOptions.twpTitle != 'undefined') {
                                    $('.twpTitle').html(elemOptions.twpTitle).fadeIn('slow');
                                }
                            }
                        }
                    }
                },
                /* @todo data tahat z api Revy */
                plots: {
                    'zasova': {
                        latitude: 49.46847729806029,
                        longitude: 18.041296169809975,
                        tooltip: {'content': "<h2> Towpoint Zasova</h2> <ul><li>nejaka prace</li><li>dalsi prace</li><li>posledni dlouha prace navic</li></ul>"},
                        twpParameter: "",
                        twpText:"",
                        twpTitle: "Towpoint Zasova",
                        twpAdress: "Towpoint Zasova",
                    },
                }
            });
        });
    </script>
{/block}